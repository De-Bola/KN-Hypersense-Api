        <addForeignKeyConstraint baseColumnNames="thing_id"
                                 baseTableName="rel_thing__state"
                                 constraintName="fk_rel_thing__state__thing_id"
                                 referencedColumnNames="id"
                                 referencedTableName="thing"/>

